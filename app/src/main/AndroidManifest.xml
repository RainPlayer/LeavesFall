<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanlei.fallingLeaves">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameMain"
            android:label="@string/title_activity_game_main"
            android:theme="@style/FullScreenTheme" />

        <service
            android:name=".common.BackgroundMusic"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".GameRankingActivity"
            android:label="@string/title_activity_game_ranking"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>